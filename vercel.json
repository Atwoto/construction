{
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/build",
    "installCommand": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../api && npm install",
    "rewrites": [
        {
            "source": "/api/test-auth",
            "destination": "/api/test-auth.js"
        },
        {
            "source": "/api/test-supabase",
            "destination": "/api/test-auth.js"
        },
        {
            "source": "/api/test-project-controller",
            "destination": "/api/test-project-controller.js"
        },
        {
            "source": "/api/test-project-stats",
            "destination": "/api/test-project-stats.js"
        },
        {
            "source": "/api/test-logger",
            "destination": "/api/test-logger.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "VERCEL": "1"
    }
}